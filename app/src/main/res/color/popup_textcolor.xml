<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- STATES WHEN BUTTON IS NOT PRESSED -->

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_checked="false"
        android:state_pressed="false"
        android:color="@color/color_blanco" />
    <item android:state_focused="false" android:state_checked="true"
        android:state_pressed="false"
        android:color="@color/background_actionbar_azul_claro" />

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:state_focused="true" android:state_checked="false"
        android:state_pressed="false"
        android:color="@color/background_actionbar_azul_claro" />
    <item android:state_focused="true" android:state_checked="true"
        android:state_pressed="false"
        android:color="@color/background_actionbar_azul_claro" />

    <!-- STATES WHEN BUTTON IS PRESSED -->

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_checked="false"
        android:state_pressed="true"
        android:color="@color/background_actionbar_azul_claro" />
    <item android:state_focused="false" android:state_checked="true"
        android:state_pressed="true"
        android:color="@color/background_actionbar_azul_claro" />

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:state_focused="true" android:state_checked="false"
        android:state_pressed="true"
        android:color="@color/background_actionbar_azul_claro" />
    <item android:state_focused="true" android:state_checked="true"
        android:state_pressed="true"
        android:color="@color/background_actionbar_azul_claro" />
</selector>