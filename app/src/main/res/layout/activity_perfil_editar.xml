<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlanco"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.firewallsol.smartcollege.Perfil_Editar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView7" >

        <LinearLayout
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="150dip"
                android:src="@drawable/logosc"
                android:layout_height="150dip"
                app:civ_border_color="#000000"
                app:civ_border_width="1dp"
                android:layout_marginBottom="10dip"
                android:id="@+id/fotosubir" />

            <LinearLayout
                android:background="#F0F0F0"
                android:layout_marginBottom="10dip"
                android:orientation="vertical"
                android:padding="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Campos Obligatorios"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/nombre"
                        android:background="@drawable/fondo_textobco"
                        android:padding="9dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:imeActionId="@+id/btnEnviar"
                        android:imeActionLabel="Nombre"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/correo"
                        android:background="@drawable/fondo_textobco"
                        android:padding="9dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Correo"
                        android:imeActionId="@+id/btnEnviar"
                        android:imeActionLabel="Correo"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/telefono"
                        android:background="@drawable/fondo_textobco"
                        android:padding="9dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Teléfono"
                        android:inputType="phone"
                        android:imeActionId="@+id/btnEnviar"
                        android:imeActionLabel="Teléfono"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>


            <LinearLayout
                android:background="#F0F0F0"
                android:layout_marginBottom="10dip"
                android:orientation="vertical"
                android:padding="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Cambio de contraseña opcional"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/contrasenaActual"
                        android:background="@drawable/fondo_textobco"
                        android:padding="9dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña actual"
                        android:imeActionId="@+id/btnEnviar"
                        android:imeActionLabel="Contraseña actual"
                        android:imeOptions="actionUnspecified"
                        android:password="true"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/nuevacontrasena"
                        android:background="@drawable/fondo_textobco"
                        android:padding="9dip"
                        android:password="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nueva contraseña"
                        android:imeActionId="@+id/btnEnviar"
                        android:imeActionLabel="Nueva contraseña"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/repetircontrasena"
                        android:background="@drawable/fondo_textobco"
                        android:padding="9dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Repetir contraseña"
                        android:password="true"
                        android:imeActionId="@+id/btnEnviar"
                        android:imeActionLabel="Repetir contraseña"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/btn_enviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    app:mrl_rippleDuration="200"
                    app:mrl_rippleOverlay="true" >
                    <Button
                        android:background="@drawable/fondo_boton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enviar"
                        android:layout_gravity="right"
                        android:textAllCaps="false"
                        android:padding="10dip"
                        android:textColor="#FFFFFF"
                        android:id="@+id/btnEnviar" />
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
