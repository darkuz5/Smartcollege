<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout2" >

        <LinearLayout
            android:id="@+id/padre"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dip"
        android:layout_marginTop="7dip"
        android:padding="10dip"
        android:background="@color/colorBlanco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btnEnviarComprobante"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            app:mrl_rippleDuration="200"
            app:mrl_rippleOverlay="true" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="match_parent">

            <TextView
                android:gravity="right"
                android:paddingRight="7dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar \n comprobante"
                android:id="@+id/textView5" />

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageView10"
                android:src="@drawable/upfile" />
        </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btnInfoPago"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            app:mrl_rippleDuration="200"
            app:mrl_rippleOverlay="true" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:id="@+id/imageView11"
                android:src="@drawable/infopago" />

            <TextView
                android:paddingLeft="7dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="InformaciÃ³n \n de pago"
                android:id="@+id/textView6" />
        </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</RelativeLayout>