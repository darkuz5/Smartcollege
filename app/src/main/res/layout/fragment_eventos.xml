<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBlanco"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.firewallsol.smartcollege.Avisos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <RadioGroup
            android:id="@+id/grupoEventos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/proxEventos"
                android:text="PRÃ“XIMOS EVENTOS"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                android:textColor="@drawable/colors_radiobuttons_sexo"
                android:background="@drawable/rbtn_selector"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:checked="true"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/calendario"
                android:text="CALENDARIO"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                android:textColor="@drawable/colors_radiobuttons_sexo"
                android:background="@drawable/rbtn_selector"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </LinearLayout>

    <FrameLayout
    android:id="@+id/content_frame_eventos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  />


</LinearLayout>
