<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBlanco"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.firewallsol.smartcollege.Avisos">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView10" >

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="170dip"
                android:layout_height="170dip"
                android:id="@+id/logo"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/telefonoblack"
                    android:id="@+id/imgTel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textSize="12sp"
                    android:textColor="@color/color_azul"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/textTel" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/emailblack"
                    android:id="@+id/imgEmail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textSize="12sp"
                    android:textColor="@color/color_azul"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txtEmail" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/tierrablack"
                    android:id="@+id/imgLink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textSize="12sp"
                    android:textColor="@color/color_azul"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txtLink" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/pinblack"
                    android:id="@+id/imgDireccion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textSize="12sp"
                    android:textColor="@color/color_azul"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txtDirecion" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="DIRECTORIO"
                android:layout_marginBottom="10dip"
                android:id="@+id/textView4" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/padre"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
