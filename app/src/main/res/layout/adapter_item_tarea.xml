<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_marginBottom="7dip"
        android:layout_height="wrap_content">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btn_aviso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            app:mrl_rippleDuration="200"
            app:mrl_rippleOverlay="true" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textSize="12sp"
                        android:textColor="@color/color_azul"
                        android:id="@+id/txtMateria" />

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:id="@+id/imgAlerta"
                            android:layout_toLeftOf="@+id/txtFecha"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:src="@drawable/calendarionegro"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:textColor="@color/color_gris"
                            android:id="@+id/txtFecha"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:textColor="@color/colorTexto"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="New Text"
                    android:id="@+id/txtTitulo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:singleLine="true"
                    android:id="@+id/txtTexto" />

            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
