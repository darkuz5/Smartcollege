<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.firewallsol.smartcollege.Galerias_Comentar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:id="@+id/scrollView6" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Titulo"
                    android:imeActionId="@+id/btnEnviar"
                    android:imeActionLabel="Titulo"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/texto"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="top"
                    android:lines="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Texto"
                    android:imeActionId="@+id/btnEnviar"
                    android:imeActionLabel="Texto"
                    android:imeOptions="actionUnspecified"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/fondo_boton"
                        android:layout_width="match_parent"
                        android:layout_height="150dip"
                        android:src="@drawable/camaranegra"
                        android:scaleType="fitCenter"
                        android:id="@+id/fotosubir" />
                </LinearLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:paddingRight="0dip"
                    android:paddingLeft="40dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <!--<com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/btn_foto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right"
                        app:mrl_rippleDuration="200"
                        app:mrl_rippleOverlay="true" >
                    <ImageButton
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:tint="#FFFFFF"
                        android:padding="10dip"
                        android:scaleType="fitCenter"
                        android:layout_height="45dip"
                        android:background="@drawable/fondo_boton"
                        android:id="@+id/imageView8"
                        android:src="@drawable/camara" />
                    </com.balysv.materialripple.MaterialRippleLayout>-->

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/btn_enviar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="right"
                        app:mrl_rippleDuration="200"
                        app:mrl_rippleOverlay="true" >
                        <Button
                            android:background="@drawable/fondo_boton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enviar"
                            android:textAllCaps="false"
                            android:padding="10dip"
                            android:textColor="#FFFFFF"
                            android:id="@+id/btnEnviar" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
