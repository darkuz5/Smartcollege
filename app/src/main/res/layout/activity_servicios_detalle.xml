<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.firewallsol.smartcollege.Servicios_Detalle">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView10" >

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fotoGal"
                    android:layout_width="80dip"
                    android:layout_height="80dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:text="New Text"
                        android:textColor="@color/colorTexto"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="New Text" />

                </LinearLayout>

            </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/telefonoblack"
            android:id="@+id/imgTel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:textSize="12sp"
            android:textColor="@color/color_azul"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textTel" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/emailblack"
            android:id="@+id/imgEmail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:textSize="12sp"
            android:textColor="@color/color_azul"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/txtEmail" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/tierrablack"
            android:id="@+id/imgLink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:textSize="12sp"
            android:textColor="@color/color_azul"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/txtLink" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dip"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/pinblack"
            android:id="@+id/imgDireccion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:textSize="12sp"
            android:textColor="@color/color_azul"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/txtDirecion" />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/ubica"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="250dip" />
            </LinearLayout>

</LinearLayout>
    </ScrollView>

</LinearLayout>
